{
    "name": "My memo",
    "description": "Extension for memo to delete halfspace and improve sentence",
    "version": "1.0",
    "icons": {
      "48": "img/memo.png"
    },
    "manifest_version": 2,
    "background" : {
      "scripts": ["back_halfSpaceReplace.js"]
    },
    "browser_action":{
        "default_icon": {"48":"img/memo.png"},
        "default_title": "メモ！",
        "default_popup": "index.html"
    },
    "permissions": [
      "storage"
		  ,"unlimitedStorage"
		  ,"contextMenus"
      ,"tabs"],
    "commands": {
      "_execute_browser_action": {
        "suggested_key": {
        "default": "Alt+M",
        "windows": "Alt+M",
        "mac": "Alt+M"
        },
        "description": "メモ"
      }
    }
}